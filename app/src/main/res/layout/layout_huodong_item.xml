<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--定制ListView的每一项的布局-->
    <!--图片展示-->
    <ImageView
        android:id="@+id/iv_big_id"
        android:adjustViewBounds="true"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@mipmap/ic_launcher" />
    <!--图片左下角的时间-->
    <TextView
        android:id="@+id/tv_time_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_big_id"
        android:drawableLeft="@mipmap/ic_travelnote_time"
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="#FFFFFF"
        android:text="2016.07.18" />
    <!--图片右下角的价格-->
    <TextView
        android:id="@+id/tv_price_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_big_id"
        android:layout_alignRight="@+id/iv_big_id"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:textSize="18dp"
        android:textColor="#FFFFFF"
        android:text="¥1800.00" />
    <!--图片新闻的标题-->
    <TextView
        android:id="@+id/tv_title_id"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_big_id"
        android:text="此处是标题" />
    <!--地址-->
    <TextView
        android:id="@+id/tv_address_id"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_title_id"
        android:textSize="12dp"
        android:text="此处是地址" />
    <!--现金红包-->

    <TextView
        android:id="@+id/tv_people_count_id"
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_address_id"
        android:drawableLeft="@mipmap/ic_act_count"
        android:gravity="center"
        android:text="此处是报名人数"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <!--<TextView-->
        <!--android:text="现金红包"-->
        <!--android:background="#CC0000"-->
        <!--android:drawableLeft="@mipmap/bonus_ic"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:id="@+id/tv_hongbao_id" />-->


</RelativeLayout>
